{
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "chore(main): bump version to ${version}",
    "tagName": "v${version}",
    "push": true,
    "pushArgs": ["--follow-tags"],
    "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template keepachangelog"
  },
  "hooks": {
    "before:init": ["echo 'Starting the release process...'", "npm test"],
    "after:bump": [
      "npx auto-changelog -p",
      "git add CHANGELOG.md",
      "git commit -m 'docs(main): update changelog for ${version}'"
    ],

    "after:release": ["echo 'Release process completed successfully.'"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
